<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.bookx.SignUp"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgdark"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp">

        <TextView
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/tx1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="40dp"
            android:id="@+id/ed1"
            android:hint=" Email"
            android:textStyle="normal|bold|italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/transparent"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/black"
            android:drawableLeft="@drawable/email"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:layout_below="@+id/tx1"
            android:layout_width="280dp"
            android:layout_height="35dp" />

        <EditText
            android:id="@+id/ed2"
            android:ems="10"
            android:hint=" Password"
            android:selectAllOnFocus="false"
            android:textStyle="normal|bold|italic"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/transparent"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/black"
            android:drawableLeft="@drawable/lock"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/ed1"
            android:layout_alignLeft="@+id/ed1"
            android:layout_alignStart="@+id/ed1"
            android:background="@android:color/white"
            android:layout_width="280dp"
            android:layout_height="35dp" />

        <EditText
            android:id="@+id/ed3"
            android:ems="10"
            android:hint=" Confirm Password"
            android:selectAllOnFocus="false"
            android:textStyle="normal|bold|italic"
            android:inputType="textPassword"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/transparent"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/black"
            android:drawableLeft="@drawable/lock"
            android:layout_below="@+id/ed2"
            android:layout_alignLeft="@+id/ed2"
            android:layout_alignStart="@+id/ed2"
            android:layout_marginTop="22dp"
            android:background="@android:color/white"
            android:layout_width="280dp"
            android:layout_height="35dp" />

        <android.support.v7.widget.CardView
            android:layout_height="50dp"
            app:cardBackgroundColor="?attr/colorAccent"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:id="@+id/CardView1"
            android:layout_width="300dp"
            android:layout_below="@+id/ed3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tx2"
                    android:textColor="#064a5a"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_gravity="center|bottom"
        android:visibility="gone"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp" />

</RelativeLayout>
