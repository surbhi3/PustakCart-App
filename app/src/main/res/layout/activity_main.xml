<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.bookx.MainActivity"
    android:background="@drawable/bg3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:id="@+id/relative_layout2"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bgmain"
        android:layout_centerInParent="true">

        <ImageView
            app:srcCompat="@drawable/splash"
            android:id="@+id/imageView2"
            android:layout_marginTop="42dp"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Buy &amp; Sell Old Books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx3"
            android:textStyle="normal|bold|italic"
            android:textSize="23sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="?attr/colorAccent"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:id="@+id/CardView1"
            android:layout_marginTop="47dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tx3"
            android:layout_alignLeft="@+id/CardView2"
            android:layout_alignStart="@+id/CardView2"
            android:layout_width="200dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#064a5a"
                    android:layout_centerInParent="true"
                    android:id="@+id/tx1"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_below="@+id/CardView1"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/CardView2"
            android:layout_height="50dp"
            android:layout_width="200dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Sign Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#064a5a"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    android:id="@+id/tx2" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>