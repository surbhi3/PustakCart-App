<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.bookx.SignUp"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgdark"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="18dp"
        android:id="@+id/relativeLayout">


        <EditText
            android:id="@+id/ed1"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/name"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text=" MY PROFILE"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/transparent"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/black"
            android:textStyle="normal|bold|italic" />

        <EditText
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/ed2"
            android:text=" PREFERENCES"
            android:textStyle="normal|bold|italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/transparent"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/black"
            android:drawableLeft="@drawable/preferences"
            android:layout_below="@+id/ed1"
            android:background="@android:color/white"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/ed3"
            android:text=" SUPPORT"
            android:textStyle="normal|bold|italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/transparent"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/black"
            android:layout_below="@+id/ed2"
            android:drawableLeft="@drawable/support"
            android:background="@android:color/white"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:inputType="textEmailAddress"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/ed4"
            android:text=" FLAMES"
            android:textStyle="normal|bold|italic"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@android:color/transparent"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="@android:color/black"
            android:layout_below="@+id/ed3"
            android:drawableLeft="@drawable/flames"
            android:background="@android:color/white"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true" />

        <android.support.v7.widget.CardView
            android:layout_height="50dp"
            app:cardBackgroundColor="?attr/colorAccent"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:id="@+id/CardView1"
            android:layout_width="250dp"
            android:layout_below="@+id/ed3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tx2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Invite Friends"
                    android:textColor="#064a5a"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <ImageView
        app:srcCompat="@drawable/gogaga"
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/mess"
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        app:srcCompat="@drawable/notif"
        android:id="@+id/imageView4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        app:srcCompat="@drawable/myprof"
        android:id="@+id/imageView5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
